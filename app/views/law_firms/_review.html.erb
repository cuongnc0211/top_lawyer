<% if review.present? && review.account.present? %>
  <div class="section-item pd-10">
    <div class="row">
      <div class="col-md-2">
        <table>
          <tr>
            <td rowspan="2">
              <%= link_to account_path(review.account) do %>
                <%= image_tag review.account.account_avatar_url, size: "40x40", class: "no_margin" %>
              <% end %>
            </td>
            <td>
              <%= link_to review.account.name, account_path(review.account) %>
            </td>
          </tr>
          <tr>
            <td>
              <%= review.created_at.to_formatted_s(:short) %>
            </td>
          </tr>
        </table>
      </div>
      <div class="col-md-10">
        <p><%= review.content %></p>
      </div>
    </div>
  </div>
<% end %>
