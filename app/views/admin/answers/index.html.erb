<div>
  <div>
    <h3><%= t ".answer" %></h3>
    <form action= <%= admin_answers_path %> >
      <div class="input-group" >
        <input type="text" class="form-control" placeholder=" <%= I18n.t "top_pages.search" %> " name="q" size="50">
      </div>
    </form>
    <table class="table">
      <thead>
        <tr>
          <th><%= t ".user_name" %></th>
          <th><%= t ".content" %></th>
          <th><%= t ".action" %></th>
        </tr>
      </thead>
      <tbody>
        <% @answers.each do |answer| %>
          <tr>
            <td> <%= answer.account_name %> </td>
            <td> <%= answer.content.truncate 50 %> </td>
            <td> <%= link_to t(".delete"), admin_answer_path(answer), method: :delete, class: "btn-danger", data: {confirm: t(".confirm")} %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @answers %>
  </div>
</div>
