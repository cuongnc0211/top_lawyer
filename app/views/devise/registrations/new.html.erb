<div class="signup_box">
  <h2 class="al-center">
    <%= link_to "TopLawyer", root_path, class: "link_none_decorate" %>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form__input" %>
    </div>

    <div class="field">
      <%= f.label t(".name") %><br />
      <%= f.text_field :name, autofocus: true, class: "form__input" %>
      <%= f.hidden_field :role, value: :User, class: "form__input" %>
    </div>

    <div class="field">
      <%= f.label t(".password") %>
      <% if @minimum_password_length %>
      <em>(<%= t(".min_char") %> )</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form__input" %>
    </div>

    <div class="field">
      <%= f.label t(".password_confirmation") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form__input" %>
    </div>

    <div class="actions">
      <br>
      <%= f.submit t(".sign_up"), class: "form__btn" %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>
