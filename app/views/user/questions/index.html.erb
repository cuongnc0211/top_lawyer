<div class="col-md-9">
  <div class="section-title al-center">
    <h4><%= t ".questions" %></h4>
  </div>
  <div class="section-body padding-arround">
    <%= render partial: "shared/questions/question", collection: @questions, as: :question %>
    <div class="row al-center"><%= paginate @questions %></div>
  </div>
</div>
<div class="col-md-3">
  <div class="section-body padding-arround al-center">
    <p><%= t ".create_new_question" %></p>
    <%= link_to t(".new_question"), new_user_question_path, class: "btn--warning" %>
  </div>
  <%= render "shared/users/user_statistic", account: current_account %>
</div>
