<div class="col-md-6 col-md-offset-3">
  <h3><%= t ".create_article" %></h3>

  <%= form_for [:user,@article] do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_field :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :status %>
      <%= f.text_field :status, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :categories_id %>
      <%= f.text_field :categories_id, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Create" , class: "form-control btn btn-primary" %>
    </div>
  <% end %>
</div>
