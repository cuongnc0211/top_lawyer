<div class="col-md-6 col-md-offset-3">
  <h3><%= t ".create_article" %></h3>

  <%= form_for [@article] do |f| %>
    <%= render "form", f: f , categories: @categories%>
    <div class="form-group">
      <%= f.submit t(".create") , class: "form-control btn btn-primary" %>
    </div>
  <% end %>
</div>
