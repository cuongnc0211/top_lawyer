<div class="col-md-9">
  <div class="section-title al-center">
    <h4><%= t ".articles" %> - <%= @category.name %></h4>
  </div>
  <div class="section-body padding-arround">
    <%= render(partial: "shared/articles/article", collection: @articles, as: :article) if @articles.count > 0 %>
    <div class="row al-center"><%= paginate @articles %></div>
  </div>

  <div class="section-title al-center">
    <h4><%= t ".questions" %> - <%= @category.name %></h4>
  </div>
  <div class="section-body padding-arround">
    <%= render(partial: "shared/questions/question", collection: @questions, as: :question) if @questions.count > 0 %>
    <div class="row al-center"><%= paginate @questions %></div>
  </div>
</div>
<div class="col-md-3">
  <div class="section-title al-center">
    <h4><%= t ".recommend_lawyers" %></h4>
  </div>
  <div class="section-body padding-arround al-center">
    <%= render "shared/ranking/monthly_top_lawyer", accounts: @advertise_lawyers %>
  </div>
</div>
