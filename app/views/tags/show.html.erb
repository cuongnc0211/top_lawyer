<p id="notice"><%= notice %></p>
<h1>Tag: <%= @tag_text %></h1>
<h1><%= t ".article" %></h1>
<table class="table">
  <thead>
    <tr>
      <th><%=t ".title" %></th>
      <th><%=t ".category_name" %></th>
      <th><%=t ".tag_list" %></th>
      <th><%=t ".status" %></th>
      <th><%=t ".total_vote" %></th>
      <th><%=t ".action" %></th>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "articles/article", collection: @articles, as: :article %>
  </tbody>
</table>
<br>

<div class="col-md-9">
  <div class="section-title al-center">
    <h4><%= t ".questions" %></h4>
  </div>
  <div class="section-body padding-arround">
    <%= render partial: "shared/questions/question", collection: @questions, as: :question %>
    <div class="row al-center"><%= paginate @questions %></div>
  </div>
</div>
