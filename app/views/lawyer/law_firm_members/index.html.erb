<div class="col-md-9">
  <% if @members.present?%>
    <%= render "show_lawyer_profile", collections: @members%>
    <%= paginate @members %>
  <% end %>
</div>
<div class="col-md-3">
  <ul style="list-style-type:none" >
    <form class="navbar-form navbar-left" action= <%= lawyer_law_firm_members_path(current_account) %> >
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="q">
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    </form>
    <% if @lawyer_profiles.present? %>
      <%= render "search_lawyer_result", collections: @lawyer_profiles %>
      <li class="list-group-item">
        <%= paginate @lawyer_profiles %>
      </li>
    <% end %>
  </ul>
</div>


