<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :status %>
  <%= f.select :status, options_for_select([[t(".draft"), :draft], [t(".publish"), :publish]]), class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :categories %>
  <%= f.select :category_id, options_for_select(categories.pluck(:name, :id)), class: "form_control" %>
</div>

<div class="form-group">
  <%= f.label :tag_list%>
  <%= f.hidden_field :tag_list, class: "form-control", readonly: true%>
  <ul id="show-tag-list" class="list-inline"></ul>
</div>

<div class="form-group">
  <input list="tag-data-list" id="input-tag" class="form-control" placeholder="input tags">
  <datalist id="tag-data-list">
    <% Tag.all.each do |tag| %>
      <option value="<%= tag.name %>"></option>
    <% end %>
  </datalist>
</div>

<div class="form-group" hidden>
  <%= f.label :total_vote %>
  <%= f.number_field :total_vote, :value => 0, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :content %>
  <%= f.cktext_area :content, rows: 10, class: "form-control" %>
</div>
<script>
  <%= render "tag_search.js"%>
</script>