<div class="col-md-9">
  <h3><%= t ".buy_advertise" %></h3>
  <%= form_for [:lawyer, :advertise, @history_advertise] do |f| %>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :province_id, options_for_select(@categories), {}, {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.label :start_time %>
      <%= f.text_field :start_time, class: "form-control datetime-picker" %>
    </div>

    <div class="form-group">
      <%= f.label :end_time %>
      <%= f.text_field :end_time, class: "form-control datetime-picker" %>
    </div>

    <div class="form-group">
      <%= f.submit t(".submit"), class: "btn btn-primary form-control" %>
    </div>
  <% end %>
</div>
<script>
  <%= render "shared/datetime-picker.js" %>
</script>
