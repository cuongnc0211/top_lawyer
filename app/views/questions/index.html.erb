<div class="col-md-9">
  <div class="section-title al-center">
    <h4><%= t ".questions" %></h4>
  </div>
  <div class="section-body padding-arround">
    <%= render partial: "shared/questions/question", collection: @questions, as: :question %>
    <div class="row al-center"><%= paginate @questions %></div>
  </div>
</div>
<div class="col-md-3">
  <div class="section-title al-center">
    <h4><%= t ".top_month" %></h4>
  </div>
  <div class="section-body padding-arround">
    <%= render "shared/ranking/monthly_top_lawyer", accounts: @top_lawyers %>
  </div>

  <div class="section-title al-center">
    <h4><%= t ".popular_tag" %></h4>
  </div>
  <div class="section-body padding-arround">
    <ul class="list_tag_show">
      <%= render partial: "shared/tags/tag", collection: @top_tags, as: :tag %>
    </ul>
  </div>
</div>
