<% answers.each do |answer| %>
<div class="card no-border no-border-radius mb-0">
  <div class="card-block post-feed-item d-flex">
    <figure class="post-author-avatar padding-left">
      <%= image_tag @account.account_avatar_url, size: "60x60", class: "" %>
    </figure>
    <div class="ml-05 full-width padding-left">
      <div class="post-header">
        <div class="post-meta d-flex align-items-center flex-wrap">
          <a class="mr-05 nuxt-link-exact-active active "><%=  @lawyer_profile.account_name %></a>
          <div class="text-muted padding-left">
            <span><%= answer.created_at.to_formatted_s(:short) %></span>
          </div>
        </div>
        <div class="post-title-box d-flex align-items-center">
          <div>
            <%= answer.content.truncate(500) %>
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <div class="d-flex">
            <div class="post-stats">
            </div>
          </div>
          <div style="margin-left: 70%"><%= link_to t(".view_question"), question_path(answer.question_id) %></div>
          <div class="points" aria-describedby="tippy-tooltip-118" data-original-title="Score"></div>
        </div>
      </div>
    </div>
  </div>
</div>
<%end%>
