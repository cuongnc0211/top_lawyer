<div class="">
  <% if current_account.present? && current_account.User? %>
    <% new_review = Review.new %>
    <%= form_for [:user, new_review] do |f| %>
      <%= render "shared/errors_list", object: new_review %>

      <%= f.text_area :content, row: 3, place_holder: t(".input_review"), class: "form__input" %>
      <%= f.hidden_field :reviewable_type, value: lawyer_profile.class %>
      <%= f.hidden_field :reviewable_id, value: lawyer_profile.id %>

      <%= f.submit t(".submit"), class: "form__btn" %><br>
    <% end %>
  <% end %>

  <% if reviews.count > 0 %>
    <%= render partial: "review", collection: reviews, as: :review %>
  <% end %>
</div>
