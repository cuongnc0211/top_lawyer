<div class="col-md-12">
  <div class="avata-image">
      <%= image_tag @account.account_avatar_url, size: "120x120", class: "" %>
  </div>
  <div class="col-md-9" style="padding-bottom: 100px">
    <div>
      <h3><%= @account.name %></h3>
    </div>
    <div class="glyphicon glyphicon-envelope">
        <%= @account.email %>
    </div>
    </br>
    <div class="glyphicon glyphicon-flag">
        <%= @account.created_at %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-7 padding-row-left">
      <%= render partial: "question", collection: @questions, as: :question %>
  </div>
  <div class="col-md-3 clearfix">
    <div class="section-body pd-10">
      <p><%= t ".questions" %> : <%= @account.questions.count %></p>
      <p><%= t ".clips" %> : <%= @account.clips.count %></p>
      <p><%= t ".votes" %> : <%= @account.votes.count %></p>
    </div>
  </div>
</div>
